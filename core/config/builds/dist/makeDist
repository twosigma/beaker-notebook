import os
import sys
import shutil

zip_name = sys.argv[1]
os.chdir('../../..')
if os.path.exists(zip_name):
    shutil.rmtree(zip_name)
if os.path.exists(zip_name + '.zip'):
    os.remove(zip_name + '.zip')
os.mkdir(zip_name)
if sys.platform == 'darwin' or sys.platform == 'linux2':
    contents = ['config', 'src/main/web', 'build/install/core', 'LICENSE', 'beaker.command']
    for f in contents:
        path = f.split('/')
        if len(path) > 1:
            os.makedirs(zip_name + '/' + '/'.join(path[:-1]))
        link = f
        for i in path:
            link = '../' + link
        os.symlink(link, zip_name + '/' + f)
    os.system('zip -r ' + zip_name + '.zip ' + zip_name + ' --exclude \\*~ \\*.gradle\\*')
shutil.rmtree(zip_name)
